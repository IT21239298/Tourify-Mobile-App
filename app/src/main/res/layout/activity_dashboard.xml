<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="459dp"
        android:layout_height="673dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drivermain" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="471dp"
        android:layout_height="387dp"
        android:layout_marginBottom="292dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/driver_prf_back" />

    <Button
        android:id="@+id/Logoutbtn"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#020A35"
        android:text="Log Out"
        android:textColor="#EC0808"
        android:textColorHint="#051573"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:iconTint="#170885"
        app:layout_constraintEnd_toStartOf="@+id/dEditbtn"
        app:layout_constraintTop_toBottomOf="@+id/DriverPorfileGender" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="123dp"
        android:layout_height="107dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/driverhomeprfname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="@string/driverhomeprfname"
        android:textColor="#F8F6F6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageButton
        android:id="@+id/driverbankbtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/drivermain"
        android:contentDescription="Click on the button"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverhomeprfname"
        app:srcCompat="@drawable/bank1" />

    <ImageButton
        android:id="@+id/driverpaymentbtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/drivermain"
        android:contentDescription="Click on the button"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/driverbankbtn"
        app:layout_constraintTop_toBottomOf="@+id/driverhomeprfname"
        app:srcCompat="@drawable/payment" />

    <ImageButton
        android:id="@+id/drivervehiclebtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/drivermain"
        android:contentDescription="Click on the button"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/driverpaymentbtn"
        app:layout_constraintTop_toBottomOf="@+id/driverhomeprfname"
        app:srcCompat="@drawable/vehicle" />

    <ImageButton
        android:id="@+id/drivernotificationbtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/drivermain"
        android:contentDescription="Click on the button"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/drivervehiclebtn"
        app:layout_constraintTop_toBottomOf="@+id/driverhomeprfname"
        app:srcCompat="@drawable/nofiation" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="367dp"
        android:layout_height="339dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverpaymentbtn"
        app:srcCompat="@drawable/driver_register" />

    <EditText
        android:id="@+id/driverProfileName"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="                       Name"
        android:textColor="@color/Logincolor"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <EditText
        android:id="@+id/driverProfileAddress"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="                       Address"
        android:textColor="@color/Logincolor"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/driverProfileName" />

    <EditText
        android:id="@+id/driverProfileEmail"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="                       Email"
        android:textColor="@color/Logincolor"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/driverProfileAddress" />

    <EditText
        android:id="@+id/DriverProfileBithday"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="                      Birthday"
        android:textColor="@color/Logincolor"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/driverProfileEmail" />

    <EditText
        android:id="@+id/DriverPorfileGender"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="                       Gender"
        android:textColor="@color/Logincolor"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/DriverProfileBithday" />

    <Button
        android:id="@+id/dEditbtn"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#020A35"
        android:text="edit"
        android:textColor="#24A8CF"
        android:textColorHint="#051573"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:iconTint="#170885"
        app:layout_constraintEnd_toEndOf="@+id/DriverPorfileGender"
        app:layout_constraintTop_toBottomOf="@+id/DriverPorfileGender" />

</androidx.constraintlayout.widget.ConstraintLayout>