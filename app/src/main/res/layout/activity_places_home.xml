<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacesHomeActivity">

    <TextView
        android:id="@+id/tvtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akronim"
        android:text="Visit SriLanka"
        android:textColor="#3D2481"
        android:textSize="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addPbtn"
        android:layout_width="58dp"
        android:layout_height="54dp"
       android:contentDescription="add pplaces"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#071665"
        android:drawableRight="@drawable/baseline_add_circle_24"
        app:layout_constraintStart_toEndOf="@+id/tvtopic"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="470dp"
        android:contentDescription="Scroll"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtopic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="400dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/mirissa" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/negombo" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/nine" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="397dp"
                android:layout_height="299dp"
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/lipton" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>