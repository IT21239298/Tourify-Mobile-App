<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    android:backgroundTint="#B4CDF6"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/packageTourTypetv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Tour type"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/packageDescriptiontv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Description"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/packagePricetv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Price"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="54dp"
            android:layout_height="75dp"
            android:layout_marginLeft="140dp"
            android:backgroundTint="#B4CDF6"
            android:contentDescription="click to delete"
            android:drawableRight="@drawable/baseline_delete_24" />


    </LinearLayout>

</androidx.cardview.widget.CardView>