<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cbackground"
    tools:context=".CSignup">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="550dp"
        android:layout_margin="20dp"
        android:backgroundTint="#05BFDB"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="513dp"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="198dp"
                android:layout_height="216dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/cotp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="241dp"
                android:layout_height="50dp"
                android:text="OTP Veryfication"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="60dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="50dp"
                android:drawableEnd="@drawable/baseline_qr_code_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Enter the Code"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textSize="23sp" />


            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#020A35"
                android:text="VERIFY CODE"
                android:textColor="#00BCD4"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>